<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tvw_book_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_marginTop="40dp"
        android:layout_gravity="bottom"
        android:textColor="@color/white"
        android:text="default text ebook cover title" >
    </TextView>

    <ImageView
        android:id="@+id/ivw_book_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvw_book_cover"
        android:layout_alignTop="@+id/tvw_book_cover"
        android:src="@drawable/shelldel"
        android:contentDescription="@string/app_name"
        android:visibility="gone" />

</RelativeLayout>